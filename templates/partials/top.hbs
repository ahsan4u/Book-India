<div class="header">
    <a href="/">
    <div class="logoAndName">
        <img src="/img-controller/icons/site-logo.png" alt="logo" class="logo-img"> <span id="site-name"><b>Book India</b></span>
    </div></a>
    <div  class="other-logo">

        <div class="cart-container">
            {{#if user._id}}<a href="/my-cart"><img src="/img-controller/icons/kart.png" alt="kart" style="width: 30px;"></a>
            {{else}}<a href="/sign-in-up"><img src="/img-controller/icons/kart.png" alt="kart" style="width: 30px;"></a>{{/if}}
            {{#if cartCounts}}<sup id="kart-count">{{cartCounts}}</sup>{{/if}}
        </div>

