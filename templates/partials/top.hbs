            {{#if likeCounts}}<sup>{{likeCounts}}</sup>{{/if}}
        </div> -->

        {{#if user}}
        <a href="/my-account">
        <div class="user-tag">
            <div id="home-profile-name">{{user.fullname}}</div>
            <img class="user-img" src="/Users/{{user.image}}">
        </div></a>
        {{else}}
        <a href="/sign-in-up">
        <div class="user-tag">
            <div id="home-profile-name">Sign in</div>
            <div class="default-user-img"></div>
        </div></a>
        {{/if}}

    </div>
</div>

